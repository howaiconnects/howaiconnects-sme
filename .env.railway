# Railway.com Environment Variables Template
# Copy these variables to your Railway service environment variables

# Port (Railway automatically sets this)
PORT=3000

# API Configuration
VITE_API_BASE_URL=https://your-railway-backend-service.railway.app/api

# EmailJS Configuration
VITE_EMAILJS_SERVICE_ID=your_service_id
VITE_EMAILJS_CONTACT_TEMPLATE_ID=your_contact_template_id
VITE_EMAILJS_BOOKING_TEMPLATE_ID=your_booking_template_id
VITE_EMAILJS_PUBLIC_KEY=your_public_key

# SMTP Configuration (Secure)
VITE_SMTP_HOST=smtp.hostinger.com
VITE_SMTP_PORT=465
VITE_SMTP_SECURE=true
VITE_SMTP_USER=support@howaiconnects.com
VITE_SMTP_PASSWORD=your_secure_smtp_password

# Admin Authentication (Secure)
# Generate a bcrypt hash for your admin password and put it here
VITE_ADMIN_PASSWORD_HASH=your_bcrypt_password_hash

# Supabase Configuration (if using external Supabase instance)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Zapier Webhooks
VITE_ZAPIER_CONTACT_WEBHOOK=your_zapier_contact_webhook_url
VITE_ZAPIER_BOOKING_WEBHOOK=your_zapier_booking_webhook_url

# n8n Webhooks
VITE_N8N_CONTACT_WEBHOOK=your_n8n_contact_webhook_url
VITE_N8N_BOOKING_WEBHOOK=your_n8n_booking_webhook_url

# Zendesk
VITE_ZENDESK_WIDGET_KEY=your_zendesk_widget_key

# Node Environment
NODE_ENV=production